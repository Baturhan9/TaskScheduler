@using TaskTechScheduler.Web.ViewModels.MainAdminViewModel
@model IEnumerable<TaskTechScheduler.Web.ViewModels.MainAdminViewModel.ListOfTasks>

<div>
<a asp-action="CreateTask" class="btn btn-primary btn-lg">
  <i class="fas fa-plus"></i> Создать
</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Название</th>
            <th>Статус</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.TaskId</td>
                <td>@task.Title</td>
                <td>
                    @switch (task.Status)
                    {
                        case ListOfTasks.StatusTask.Issued:
                            <span class="badge bg-danger">Issued</span>
                            break;
                        case ListOfTasks.StatusTask.Doing:
                            <span class="badge bg-warning">Doing</span>
                            break;
                        case ListOfTasks.StatusTask.Done:
                            <span class="badge bg-success">Done</span>
                            break;
                    }
                </td>
                <td><a asp-action="ShowTask" class="btn btn-secondary"asp-route-id=@task.TaskId>Редактировать</a></td>
            </tr>
        }
    </tbody>
</table>