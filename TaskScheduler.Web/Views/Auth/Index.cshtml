@model TaskTechScheduler.Web.ViewModels.AuthViewModel.UserAuthViewModel


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="text-center">Registration Form</h2>
            <form method="post">
                <div class="form-group">
                    <label>Email:</label>
                    <input type="text" class="form-control" asp-for="Login" placeholder="Enter username">
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Enter password">
                </div>
                <div class="form-group">
                    <label>Coasdfasdfdsaffsadnfirm Password:</label>
                    <input type="password" class="form-control"  asp-for="ConfirmPassword" placeholder="Confirm password">
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>
</div>